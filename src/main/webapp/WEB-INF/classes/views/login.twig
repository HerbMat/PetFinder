{% extends 'template.twig' %}
{% block title %}User Login{% endblock %}
{% block content %}

<div class="row">
    <div class="col s4 offset-s4">
        <h2 class="grey-text text-lighten-2">Login</h2>

        {% if error %}
            <div class="row">
                <div class="col s6 offset-s3" role="alert">
                    <div class="card red darken-1">
                        <div class="card-content white-text">
                            <p>{{ error }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <form action="{{ '/login' | path }}" method="post"
              enctype="multipart/form-data">

            <div class="row input-field">
                <input type="text" id="username" name="username" value="{{ login }}"
                       class="validate" placeholder="Username">
                <label class="sr-only" for="login">Username</label>
            </div>

            <div class="row input-field">
                <input type="password" id="password" name="password"
                       class="validate" placeholder="Password">
                <label class="sr-only" for="password">Password</label>
            </div>

            <input type="hidden" name="{{ csrf.parameterName }}" value="{{ csrf.token }}" />

            <div class="row">
                <button type="submit" class="btn waves-effect waves-light">
                    <i class="material-icons left">perm_identity</i>Login
                </button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
